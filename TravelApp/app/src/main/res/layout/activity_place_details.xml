<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlaceDetailsActivity">


    <ImageView
        android:id="@+id/placeImage"
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/travel_buddy" />

    <TextView
        android:id="@+id/placeDestinationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="196dp"
        android:text="Bukarest, Romania"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeImage" />

    <TextView
        android:id="@+id/placeDescriptionLabel"
        android:layout_width="346dp"
        android:layout_height="71dp"
        android:layout_marginTop="52dp"
        android:textColor="@color/black"
        android:text="skdjbsakjdbsakjbdkjsabdkjsabdkjbaskjdbsakjbdjksabdkjsabkdjbsakjbdkasjkdbsakjbdkjsabdkjasbdjkbsakjdbsakjbdkjasbdjksbjkdbskjdbjksbdkjsabdkjsabdjksbajkdbasjkdbksjabdkj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeDestinationLabel" />

    <ImageView
        android:id="@+id/imagePin"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/placeDestinationLabel"
        app:layout_constraintHorizontal_bias="0.605"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeImage"
        app:srcCompat="@drawable/pin"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>